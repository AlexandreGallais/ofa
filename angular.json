{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "ffa": {
      "projectType": "library",
      "root": "packages/ffa",
      "sourceRoot": "packages/ffa/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "packages/ffa/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "packages/ffa/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "packages/ffa/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "tsConfig": "packages/ffa/tsconfig.spec.json",
            "polyfills": ["zone.js", "zone.js/testing"],
            "karmaConfig": "packages/ffa/karma.conf.js"
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "packages/ffa/**/*.ts",
              "packages/ffa/**/*.html"
            ],
            "eslintConfig": "packages/ffa/eslint.config.js"
          }
        },
        "storybook": {
          "builder": "@storybook/angular:start-storybook",
          "options": {
            "configDir": "packages/ffa/.storybook",
            "browserTarget": "ffa:build",
            "compodoc": false,
            "port": 6006
          }
        },
        "build-storybook": {
          "builder": "@storybook/angular:build-storybook",
          "options": {
            "configDir": "packages/ffa/.storybook",
            "browserTarget": "ffa:build",
            "compodoc": false,
            "outputDir": "storybook-static"
          }
        }
      }
    }
  },
  "schematics": {
    "@schematics/angular:component": {
      "style": "scss"
    }
  },
  "cli": {
    "schematicCollections": ["@angular-eslint/schematics"]
  }
}

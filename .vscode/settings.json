{
    /* VSCode - Breadcrumbs */
    "breadcrumbs.symbolPath": "off",
    "breadcrumbs.icons": false,

    /* VSCode - Editor */
    "editor.fontFamily": "Fira Code",
    "editor.fontLigatures": "'calt', 'ss03', 'ss04', 'ss05'",
    "editor.fontWeight": "450",
    "editor.letterSpacing": 0.25,
    "editor.minimap.enabled": false,

    /* VSCode - Explorer */
    "explorer.decorations.colors": false,
    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.patterns": {
        "*.ts": "${capture}.js",
        "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
        "*.jsx": "${capture}.js",
        "*.tsx": "${capture}.ts",
        "README.md": "package.json, package-lock.json, LICENSE, .git, .gitignore, .gitmodules, tsconfig.json, vite.config.ts",
        "eslint.config.mjs": ".editorconfig, .stylelintrc.json"
    },
    "explorer.sortOrder": "type",

    /* VSCode - Workbench */
    "workbench.activityBar.location": "top",
    "workbench.colorTheme": "One Dark Pro",
    "workbench.editor.tabSizing": "shrink",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.tree.indent": 19,
    "workbench.tree.renderIndentGuides": "always",
    "workbench.view.alwaysShowHeaderActions": true,
    "workbench.colorCustomizations": {
        "gitDecoration.addedResourceForeground": "#ABB2BF",
        "gitDecoration.conflictingResourceForeground": "#ABB2BF",
        "gitDecoration.deletedResourceForeground": "#ABB2BF",
        "gitDecoration.ignoredResourceForeground": "#ABB2BF",
        "gitDecoration.modifiedResourceForeground": "#ABB2BF",
        "gitDecoration.renamedResourceForeground": "#ABB2BF",
        "gitDecoration.stageDeletedResourceForeground": "#ABB2BF",
        "gitDecoration.stageModifiedResourceForeground": "#ABB2BF",
        "gitDecoration.submoduleResourceForeground": "#ABB2BF",
        "gitDecoration.untrackedResourceForeground": "#ABB2BF",
        "tab.activeForeground": "#ABB2BF",
        "tab.hoverForeground": "#ABB2BF",
        "tab.inactiveForeground": "#ABB2BF",
        "list.activeSelectionForeground": "#ABB2BF",
        "list.inactiveSelectionForeground": "#ABB2BF"
    },

    /* VSCode - Git */
    "git.enableSmartCommit": true,
    "git.confirmSync": false,

    /* Language - All */
    "[html][css][scss][json][jsonc]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    /* Language - CSS */
    "stylelint.validate": ["css", "scss"],
    "[css][scss]": {
        "editor.codeActionsOnSave": {
            "source.fixAll.stylelint": "explicit"
        }
    },

    /* Language - JavaScript */
    "[javascript][typescript]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "dbaeumer.vscode-eslint",
        "editor.codeActionsOnSave": {
            "source.fixAll.eslint": "explicit"
        }
    },

    /* Language - Markdown */
    "[markdown]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "DavidAnson.vscode-markdownlint",
        "editor.codeActionsOnSave": {
            "source.fixAll.markdownlint": "explicit"
        }
    },

    "material-icon-theme.files.customClones": [
        {
            "name": "git-800",
            "base": "git",
            "color": "gray-800",
            "fileNames": [".git", ".gitignore", ".gitmodules"]
        },
        {
            "name": "certificate-800",
            "base": "certificate",
            "color": "gray-800",
            "fileNames": ["LICENSE"]
        },
        {
            "name": "nodejs-500",
            "base": "nodejs",
            "color": "gray-500",
            "fileNames": ["package.json"]
        },
        {
            "name": "nodejs-800",
            "base": "nodejs",
            "color": "gray-800",
            "fileNames": ["package-lock.json"]
        },
        {
            "name": "settings-800",
            "base": "settings",
            "color": "gray-800",
            "fileNames": [
                ".editorconfig",
                ".stylelintrc.json",
                "eslint.config.mjs"
            ]
        },
        {
            "name": "tsconfig-500",
            "base": "tsconfig",
            "color": "gray-500",
            "fileNames": ["tsconfig.json"]
        },
        {
            "name": "vite-500",
            "base": "vite",
            "color": "gray-500",
            "fileNames": ["vite.config.ts"]
        }
    ],
    "material-icon-theme.folders.customClones": [
        {
            "name": "git-800",
            "base": "git",
            "color": "gray-800",
            "folderNames": [".git"]
        },
        {
            "name": "vscode-800",
            "base": "vscode",
            "color": "gray-800",
            "folderNames": [".vscode"]
        },
        {
            "name": "node_modules-800",
            "base": "node",
            "color": "gray-800",
            "folderNames": ["node_modules"]
        },
        {
            "name": "cache-800",
            "base": "temp",
            "color": "gray-800",
            "folderNames": [".cache"]
        },
        {
            "name": "storybook-800",
            "base": "storybook",
            "color": "gray-800",
            "folderNames": [".storybook"]
        }
    ],

    "files.exclude": {
        "**/.git": false,
        "**/.svn": false,
        "**/.hg": false,
        "**/CVS": false,
        "**/.DS_Store": false,
        "**/Thumbs.db": false
    },
    "explorerExclude.backup": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true
    }
}
